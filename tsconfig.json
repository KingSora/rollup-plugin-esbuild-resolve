{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "declarationDir": "types",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "include": ["src/**/*"]
}